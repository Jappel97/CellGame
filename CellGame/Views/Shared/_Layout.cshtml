    <style>

        body {
            background: linear-gradient(#1f5f87, #51a0df);
            background-size: cover; 
        }

        html {
            height: 100%;
        }

        h1, h2, h4, h5, h6{
            color: white;
        }

        h3{
            color: gold;
        }

        a{
            color: white;
        }
    </style>
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Play", "Scenarios", "Scenarios")</li>
                    <li>@Html.ActionLink("Create/Edit", "EditableScenarios", "Scenarios")</li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Professor") || User.IsInRole("TA"))
                    {
                        <li>@Html.ActionLink("Approve", "ScenariosToApprove", "Scenarios")</li>
                        <li>@Html.ActionLink("Grade", "Index", "GradeScenarios")</li>
                        <li>@Html.ActionLink("Students", "Index", "Students")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Grades", "Grades", "Grades")</li>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("Professor") || User.IsInRole("TA"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Help
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">@Html.ActionLink("Create/Edit", "CreateEditAdmin", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Approve", "ApproveAdmin", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Grade", "GradeAdmin", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Students", "StudentsAdmin", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Log In", "LogInAdmin", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Register", "RegisterAdmin", "Help")</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">@Html.ActionLink("User Roles", "UserRolesAdmin", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("About", "About", "Help")</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Help
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">@Html.ActionLink("Log In", "LoginHelp", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Register", "RegisterHelp", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("How to Play Scenario", "HowToPlay", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Play", "PlayHelp", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Create/Edit", "CreateEditHelp", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("Grades", "GradesHelp", "Help")</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">@Html.ActionLink("Other Questions?", "OtherQuestions", "Help")</a></li>
                                <li><a href="#">@Html.ActionLink("About", "About", "Help")</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - CellGame
                <img src="http://www.cs.cuw.edu/wp-content/uploads/2017/01/CS_Logo-2.jpg" alt="CUW Computer Science Logo" style="height:50px"/>
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Loading")    
    @RenderSection("scripts", required: false)
</body>
</html>